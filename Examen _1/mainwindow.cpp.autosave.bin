ListaDobleCircular<char>  MainWindow::construirListaDec(QString numeroDecimal){
    ListaDobleCircular<char> lista(0);
    for(int n=0; n<numeroDecimal.length();n++){
        char hola = numeroDecimal[n].toLatin1();
        lista.agregarSiguiente(&hola);
        lista.avanzarEnLista();

    }

    return lista;
}


